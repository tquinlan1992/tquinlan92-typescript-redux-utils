{
  "compileOnSave": true,
  "compilerOptions": {
      "allowJs": true,
      "target": "es5",
      "jsx": "react",
      "module": "CommonJS",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "removeComments": true,
      "strictNullChecks": true,
      "keyofStringsOnly": true,
      "lib": [
          "es6",
          "es7",
          "dom",
          "es2017"
      ],
      "outDir": "../../dist"
  },
  "exclude": [
      "dist",
      "node_modules",
      "**/*.test.ts"
  ]
}